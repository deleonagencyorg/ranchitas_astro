---
import { span } from 'framer-motion/m';

interface CardHomeInterface {
    badge?: string;
    title?: string;
    titleHighlight?: string;
    description1?: string;
    description2?: string;
    videoSrc?: string;
    videoPoster?: string;
    backgroundColor?: string;
}


interface Props {
    cardVideo: CardHomeInterface;
}

const {
    cardVideo
} = Astro.props;
---

<section class="hidden md:block xl:block w-full py-6 md:py-12 px-4 md:px-8 xl:mt-12 md:mt-6">
    <div class="max-w-7xl mx-auto">
        <div
            class="bg-[#FEFEFE] rounded-[20px] md:rounded-[40px] shadow-xl p-6 md:p-8 xl:p-12"
        >
            <div
                class="flex flex-col xl:flex-row items-center gap-6 md:gap-8 xl:gap-12"
            >
                <!-- Video Container -->
                <div class="w-full xl:w-1/2">
                    <div
                        class="rounded-[20px] md:rounded-[40px] flex items-center justify-center shadow-lg overflow-hidden aspect-video"
                        style={`background-color: ${cardVideo.backgroundColor}`}
                    >
                        <video
                            class="w-full h-full object-cover"
                            autoplay
                            loop
                            muted
                            playsinline
                            poster={cardVideo.videoPoster}
                        >
                            <source src={cardVideo.videoSrc} type="video/mp4" />
                            {cardVideo.videoSrc ? (
                                <>
                                    <source src={cardVideo.videoSrc} type="video/mp4" />
                                    <source src={cardVideo.videoSrc?.replace('.mp4', '.webm')} type="video/webm" />
                                </>
                            ) : null}
                            {Astro.url.pathname.startsWith('/en') ? 'Your browser does not support the video element.' : 'Tu navegador no soporta el elemento de video.'}
                        </video>
                    </div>
                </div>

                <!-- Contenido de texto -->
                <div class="w-full xl:w-1/2 space-y-4 md:space-y-6">
                    <!-- Badge naranja -->
                    <div class="inline-block mt-6 mb-6">
                        <span
                            class="bg-orangeButton text-white px-4 py-2 md:px-6 md:py-3 rounded-full font-bold text-sm md:text-[16px]"
                        >
                            {cardVideo.badge}
                        </span>
                    </div>

                    <!-- Título con dos colores -->
                    <h1
                        class="text-[49px] font-bold"
                    >
                        <span class="text-black font-heading ">{cardVideo.title} </span>
                        <span class="text-[#FF8C00] font-heading ">{cardVideo.titleHighlight}</span>
                     </h1>

                    <!-- Descripción párrafo 1 -->
                    <p
                        class="text-gray-700 text-sm md:text-base xl:text-lg leading-relaxed"
                    >
                        {cardVideo.description1}
                    </p>

                    <!-- Descripción párrafo 2 -->
                    <p
                        class="text-gray-700 text-sm md:text-base xl:text-lg leading-relaxed"
                    >
                        {cardVideo.description2}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="block md:hidden px-4 py-6 mx-auto max-w-full mt-6">
    <div class="bg-[#FFFFFF] rounded-3xl p-4 space-y-4">
        
        <div class="w-full">
            <div
            class="rounded-[20px] flex items-center justify-center shadow-lg overflow-hidden h-[240px] sm:h-[280px]"
                style={`background-color: ${cardVideo.backgroundColor}`}
            >
                <video
                    class="w-full h-full object-cover"
                    autoplay
                    loop
                    muted
                    playsinline
                    poster={cardVideo.videoPoster}
                >
                    <source src={cardVideo.videoSrc} type="video/mp4" />
                    {Astro.url.pathname.startsWith('/en') ? 'Your browser does not support the video element.' : 'Tu navegador no soporta el elemento de video.'}
                </video>
            </div>
        </div>
      <div class="pt-4 pb-3">
        <span class="bg-orangeButton text-white px-4 py-2 rounded-full font-bold text-sm">
          {cardVideo.badge}
        </span>
      </div>
  
      <h2 class="text-3xl sm:text-4xl font-heading font-extrabold leading-tight mt-4">
        <span class="text-black font-heading ">{cardVideo.title} </span> <br />
        <span class="text-orangeButton font-heading ">{cardVideo.titleHighlight}</span>
      </h2>
  
      <p class="text-gray-700 text-sm sm:text-base leading-relaxed">
        {cardVideo.description1}
      </p>
  
      <p class="text-gray-700 text-sm sm:text-base leading-relaxed">
        {cardVideo.description2}
      </p>
  
    </div>
</section>
  
  
